<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<FactionColonies.FCOptionDef>
		<defName>randomExampleEvent_exampleOption</defName> <!-- make this a unique name for the option. I suggest doing parentEventName.optionName -->
		<label>Do this thing in response to the event.</label> <!-- This is what the option says to the player -->
		<parentEvent>randomEventExample</parentEvent> <!-- the defName of the event this option belongs to -->
		<baseChanceOfSuccess>50</baseChanceOfSuccess> <!-- The chance (1-100) that the option will succeed. Can be set to 100 to not fail. -->
		<silverCost>501</silverCost> <!-- The cost, if any, this option requires the player to pay to select -->
		<successEvent>randomEventExample2</successEvent> <!-- The event to create if this option succeeds. Put the FCEventDef defName here. -->
		<failEvent></failEvent> <!-- The event to create if this option fails. Put the FCEventDef defName here. Not needed if you have a 100 baseChanceOfSuccess -->
	</FactionColonies.FCOptionDef>
	
	<FactionColonies.FCOptionDef>
		<defName>randomExampleEvent_exampleOption2</defName>
		<label>text</label>
		<parentEvent>randomEventExample</parentEvent>
		<baseChanceOfSuccess>50</baseChanceOfSuccess>
		<silverCost>0</silverCost>
		<successEvent>randomEventExample2</successEvent>
		<failEvent></failEvent>
	</FactionColonies.FCOptionDef>
</Defs>