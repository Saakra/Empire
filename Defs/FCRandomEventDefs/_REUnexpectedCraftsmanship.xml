<?xml version="1.0" encoding="utf-8" ?>
<Defs>

		<!-- Negative Food -->
	<FactionColonies.FCEventDef>
		<!-- Basic def stuff -->
		<defName>unexpectedCraftsmanship</defName> 
		<label>Unexpected Craftsmanship</label> 
		<desc>The craftsmen in your settlements have been working unusually well! +0.5 weapons base production and +0.5 apparel base production.</desc>
		
		<!-- Basic event stuff -->
		<timeTillTrigger>300000</timeTillTrigger> 
		<perpetual>false</perpetual> 
		
		<traits> 
		<li>unexpectedCraftsmanship</li>
		</traits>
		
		<options> 
		</options>
		<activateAtStart>false</activateAtStart> 
		
		<isRandomEvent>true</isRandomEvent> 
		<weight>25</weight>  <!-- The amount of 'chances' an random event has to be selected. 1 for Extremely rare, 5 for rare, 15 for uncommon, 25 for common -->
		<incompatibleEvents>
		<li>missedSupplyDelivery</li>
		</incompatibleEvents>
		
		
		<rangeSettlementsAffected>1~3</rangeSettlementsAffected> 
		<settlementsCarryOver>true</settlementsCarryOver> 
		
	</FactionColonies.FCEventDef>
	
	<!-- Food Shortage -->
	<FactionColonies.FCTraitEffectDef>
		<defName>unexpectedCraftsmanship</defName> <!--Name of Def -->
		<label>Unexpected Craftsmanship</label> <!--Lable of Def -->
		<productionBaseWeapons>+.5</productionBaseWeapons>
		<productionBaseApparel>+.5</productionBaseApparel>
	</FactionColonies.FCTraitEffectDef>

</Defs>