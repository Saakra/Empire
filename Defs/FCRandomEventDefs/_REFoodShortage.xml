<?xml version="1.0" encoding="utf-8" ?>
<Defs>

		<!-- Negative Food -->
	<FactionColonies.FCEventDef>
		<!-- Basic def stuff -->
		<defName>foodShortage</defName> 
		<label>Widespread Food Shortage</label> 
		<desc>There's a widespread food shortage in the affected regions. -1 food base production.</desc>
		
		<!-- Basic event stuff -->
		<timeTillTrigger>300000</timeTillTrigger> 
		<perpetual>false</perpetual> 
		
		<traits> 
		<li>foodShortage</li>
		</traits>
		
		<options> 
		</options>
		<activateAtStart>false</activateAtStart> 
		
		<isRandomEvent>true</isRandomEvent> 
		<weight>25</weight>  <!-- The amount of 'chances' an random event has to be selected. 1 for Extremely rare, 5 for rare, 15 for uncommon, 25 for common -->
		<incompatibleEvents>
		<li>foodShortage</li>
		</incompatibleEvents>
		
		
		<rangeSettlementsAffected>1~3</rangeSettlementsAffected> 
		<settlementsCarryOver>true</settlementsCarryOver> 
		
	</FactionColonies.FCEventDef>
	
	<!-- Food Shortage -->
	<FactionColonies.FCTraitEffectDef>
		<defName>foodShortage</defName> <!--Name of Def -->
		<label>Food Shortage</label> <!--Lable of Def -->
		<productionBaseFood>-1</productionBaseFood>
	</FactionColonies.FCTraitEffectDef>

</Defs>