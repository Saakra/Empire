<?xml version="1.0" encoding="utf-8" ?>
<Defs>

		<!-- Negative Food -->
	<FactionColonies.FCEventDef>
		<!-- Basic def stuff -->
		<defName>wanderlust</defName> 
		<label>Wanderlust</label> 
		<desc>The citizens of your faction are itching to get on the road and settle new lands. Half cost to settle.</desc>
		
		<!-- Basic event stuff -->
		<timeTillTrigger>300000</timeTillTrigger> 
		<perpetual>false</perpetual> 
		
		<traits> 
		<li>wanderlust</li>
		</traits>
		
		<options> 
		</options>
		<activateAtStart>false</activateAtStart> 
		
		<isRandomEvent>true</isRandomEvent> 
		<weight>25</weight>  <!-- The amount of 'chances' an random event has to be selected. 1 for Extremely rare, 5 for rare, 15 for uncommon, 25 for common -->
		<incompatibleEvents>
		<li>settlingDown</li>
		</incompatibleEvents>
		
		
		
	</FactionColonies.FCEventDef>
	
	<!-- Food Shortage -->
	<FactionColonies.FCTraitEffectDef>
		<defName>wanderlust</defName> <!--Name of Def -->
		<label>Wanderlist</label> <!--Lable of Def -->
		<createSettlementMultiplier>.5</createSettlementMultiplier>
	</FactionColonies.FCTraitEffectDef>

</Defs>