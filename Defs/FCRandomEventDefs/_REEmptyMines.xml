<?xml version="1.0" encoding="utf-8" ?>
<Defs>

		<!-- Negative Food -->
	<FactionColonies.FCEventDef>
		<!-- Basic def stuff -->
		<defName>emptyMines</defName> 
		<label>Empty Mines</label> 
		<desc>The affected region(s) have been stricken with barren mines. -1 mining base production.</desc>
		
		<!-- Basic event stuff -->
		<timeTillTrigger>300000</timeTillTrigger> 
		<perpetual>false</perpetual> 
		
		<traits> 
		<li>emptyMines</li>
		</traits>
		
		<options> 
		</options>
		<activateAtStart>false</activateAtStart> 
		
		<isRandomEvent>true</isRandomEvent> 
		<weight>25</weight>  <!-- The amount of 'chances' an random event has to be selected. 1 for Extremely rare, 5 for rare, 15 for uncommon, 25 for common -->
		<incompatibleEvents>
		<li>struckRichOreVein</li>
		</incompatibleEvents>
		
		
		<rangeSettlementsAffected>1~3</rangeSettlementsAffected> 
		<settlementsCarryOver>true</settlementsCarryOver> 
		
	</FactionColonies.FCEventDef>
	
	<!-- Food Shortage -->
	<FactionColonies.FCTraitEffectDef>
		<defName>emptyMines</defName> <!--Name of Def -->
		<label>Empty Mines</label> <!--Lable of Def -->
		<productionBaseMining>-1</productionBaseMining>
	</FactionColonies.FCTraitEffectDef>

</Defs>