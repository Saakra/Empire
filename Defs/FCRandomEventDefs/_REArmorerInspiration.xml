<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<FactionColonies.FCEventDef>
		<defName>armorerInspiration_0</defName> 
		<label>Armorer Inspiration</label> 
		<desc>A armorer in one of your settlements contacts you. He explains that he has been struck with great inspiration and requests silver for supplies to create you armor worthy of your empire. He plans to give it to you as a token of his loyalty.</desc>
		<!-- Basic event stuff -->
		<timeTillTrigger>0</timeTillTrigger> 

		<options> 
			<li>armorerInspiration_0_1</li>
			<li>armorerInspiration_0_2</li>
			<li>armorerInspiration_0_3</li>
			<li>armorerInspiration_0_4</li>
		</options>
		
		<activateAtStart>true</activateAtStart> 
		
		<isRandomEvent>true</isRandomEvent> 
		<weight>10</weight>  <!-- The amount of 'chances' an random event has to be selected. 1 for Extremely rare, 5 for rare, 15 for uncommon, 25 for common -->
		<incompatibleEvents>
		</incompatibleEvents>

		<rangeSettlementsAffected>0~0</rangeSettlementsAffected> 
		<settlementsCarryOver>true</settlementsCarryOver> 

		<requiredResource>apparel</requiredResource> 
		
	</FactionColonies.FCEventDef>


	<FactionColonies.FCOptionDef>
		<defName>armorerInspiration_0_1</defName>
		<label>I do not have the money to fund such an endeavor.</label>
		<parentEvent>armorerInspiration_0</parentEvent>
		<baseChanceOfSuccess>100</baseChanceOfSuccess>
		<silverCost>0</silverCost>
		<successEvent>Null</successEvent>
		<failEvent></failEvent>
	</FactionColonies.FCOptionDef>
	
	<FactionColonies.FCOptionDef>
		<defName>armorerInspiration_0_2</defName>
		<label>I'll set aside a small amount for your efforts. Surely, 500 silver will be plenty.</label>
		<parentEvent>armorerInspiration_0</parentEvent>
		<baseChanceOfSuccess>100</baseChanceOfSuccess>
		<silverCost>500</silverCost>
		<successEvent>armorerInspiration_1-1</successEvent>
		<failEvent></failEvent>
	</FactionColonies.FCOptionDef>
	
	<FactionColonies.FCOptionDef>
		<defName>armorerInspiration_0_3</defName>
		<label>A great inspiration? I want to see this done. 1,000 silver will be allotted.</label>
		<parentEvent>armorerInspiration_0</parentEvent>
		<baseChanceOfSuccess>100</baseChanceOfSuccess>
		<silverCost>1000</silverCost>
		<successEvent>armorerInspiration_1-2</successEvent>
		<failEvent></failEvent>
	</FactionColonies.FCOptionDef>
	
	<FactionColonies.FCOptionDef>
		<defName>armorerInspiration_0_4</defName>
		<label>This will surely turn to be an artifact of the ages! I will give all of the funding you require. \n ... 2,000 silver, you say?</label>
		<parentEvent>armorerInspiration_0</parentEvent>
		<baseChanceOfSuccess>100</baseChanceOfSuccess>
		<silverCost>2000</silverCost>
		<successEvent>armorerInspiration_1-3</successEvent>
		<failEvent></failEvent>
	</FactionColonies.FCOptionDef>
	
	
	
	
	
	
