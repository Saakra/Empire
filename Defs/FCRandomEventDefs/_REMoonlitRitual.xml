<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Basic def stuff -->
	<FactionColonies.FCEventDef>
		<defName>moonlitRitual_0</defName> 
		<label>A Moonlit Ritual</label> 
		<desc>One of your settlements reports seeing strange figures wander into the forest at night. They are described as wearing strange costumes.</desc>
		<!-- Basic event stuff -->
		<timeTillTrigger>0</timeTillTrigger> 

		<options> 
			<li>moonlitRitual_0_1</li>
			<li>moonlitRitual_0_2</li>
		</options>
		
		<activateAtStart>true</activateAtStart> 
		
		<isRandomEvent>true</isRandomEvent> 
		<weight>10</weight>  <!-- The amount of 'chances' an random event has to be selected. 1 for Extremely rare, 5 for rare, 15 for uncommon, 25 for common -->
		<incompatibleEvents>
		</incompatibleEvents>

		<rangeSettlementsAffected>1~1</rangeSettlementsAffected> 
		<settlementsCarryOver>true</settlementsCarryOver> 

		<requiredResource>food</requiredResource> 
		
	</FactionColonies.FCEventDef>
		
	<FactionColonies.FCOptionDef>
		<defName>moonlitRitual_0_1</defName>
		<label>I don't care what people do in the forest. Leave them be.</label>
		<parentEvent>moonlitRitual_0</parentEvent>
		<baseChanceOfSuccess>100</baseChanceOfSuccess>
		<silverCost>0</silverCost>
		<successEvent>moonlitRitual_2-2</successEvent>
		<failEvent></failEvent>
	</FactionColonies.FCOptionDef>
	
	<FactionColonies.FCOptionDef>
		<defName>moonlitRitual_0_2</defName>
		<label>Send someone to follow them. I want to know what's happening.</label>
		<parentEvent>moonlitRitual_0</parentEvent>
		<baseChanceOfSuccess>100</baseChanceOfSuccess>
		<silverCost>0</silverCost>
		<successEvent>moonlitRitual_1-1</successEvent>
		<failEvent></failEvent>
	</FactionColonies.FCOptionDef>
		
		
		
		
		
	<FactionColonies.FCEventDef>
		<!-- Basic def stuff -->
		<defName>moonlitRitual_1-1</defName> 
		<label>A Moonlit Ritual</label> 
		<desc>Someone has been sent to investigate...</desc>
		<optionDescription>You receive news that an investigator followed an individual into the woods. They reported back seeing the group perform a series of almost ritualistic carnal acts. Not caring to stick around for it, he returned.</optionDescription>
		<!-- Basic event stuff -->
		<timeTillTrigger>60000</timeTillTrigger> 
		<options> 
			<li>moonlitRitual_1-1_1</li>
			<li>moonlitRitual_1-1_2</li>
			<li>moonlitRitual_1-1_3</li>
		</options>
		<activateAtStart>false</activateAtStart>
		<rangeSettlementsAffected>1~1</rangeSettlementsAffected> 
		<settlementsCarryOver>true</settlementsCarryOver> 
	</FactionColonies.FCEventDef>
		
	<FactionColonies.FCOptionDef>
		<defName>moonlitRitual_1-1_1</defName>
		<label>How disgusting. Shut it down!</label>
		<parentEvent>moonlitRitual_1-1</parentEvent>
		<baseChanceOfSuccess>100</baseChanceOfSuccess>
		<silverCost>0</silverCost>
		<successEvent>Null</successEvent>
		<failEvent></failEvent>
	</FactionColonies.FCOptionDef>
	<FactionColonies.FCOptionDef>
		<defName>moonlitRitual_1-1_2</defName>
		<label>A romp in the woods? Who cares?</label>
		<parentEvent>moonlitRitual_1-1</parentEvent>
		<baseChanceOfSuccess>100</baseChanceOfSuccess>
		<silverCost>0</silverCost>
		<successEvent>moonlitRitual_2-2</successEvent>
		<failEvent></failEvent>
	</FactionColonies.FCOptionDef>
	<FactionColonies.FCOptionDef>
		<defName>moonlitRitual_1-1_3</defName>
		<label>Investigate further.</label>
		<parentEvent>moonlitRitual_1-1</parentEvent>
		<baseChanceOfSuccess>100</baseChanceOfSuccess>
		<silverCost>0</silverCost>
		<successEvent>moonlitRitual_2-1</successEvent>
		<failEvent></failEvent>
	</FactionColonies.FCOptionDef>
		
		
	<FactionColonies.FCEventDef>
		<!-- Basic def stuff -->
		<defName>moonlitRitual_2-1</defName> 
		<label>A Moonlit Ritual</label> 
		<desc>Investigating further...</desc>
		<optionDescription>The investigator reports back that the group returned again. They continued the same activities as the night prior- however, after not leaving, he observed that the group brought out an ornate chest with religious-looking symbols. He stepped closer for a better look, but after stepping on a dead leaf, the group heard him. He fled before they could find him.</optionDescription>
		<!-- Basic event stuff -->
		<timeTillTrigger>60000</timeTillTrigger> 
		<options> 
			<li>moonlitRitual_2-1_1</li>
			<li>moonlitRitual_2-1_2</li>
		</options>
		<activateAtStart>false</activateAtStart>
		<rangeSettlementsAffected>1~1</rangeSettlementsAffected> 
		<settlementsCarryOver>true</settlementsCarryOver> 
	</FactionColonies.FCEventDef>	
		
	<FactionColonies.FCOptionDef>
		<defName>moonlitRitual_2-1_1</defName>
		<label>Whatever it is, I think it's time to just let it go.</label>
		<parentEvent>moonlitRitual_2-1</parentEvent>
		<baseChanceOfSuccess>100</baseChanceOfSuccess>
		<silverCost>0</silverCost>
		<successEvent>moonlitRitual_2-2</successEvent>
		<failEvent></failEvent>
	</FactionColonies.FCOptionDef>
	<FactionColonies.FCOptionDef>
		<defName>moonlitRitual_2-1_2</defName>
		<label>Go back again. I need to know if this some sort of cult.</label>
		<parentEvent>moonlitRitual_2-1</parentEvent>
		<baseChanceOfSuccess>50</baseChanceOfSuccess>
		<silverCost>0</silverCost>
		<successEvent>moonlitRitual_3-1</successEvent>
		<failEvent>moonlitRitual_3-2</failEvent>
	</FactionColonies.FCOptionDef>
		
		
	<FactionColonies.FCEventDef>
		<!-- Basic def stuff -->
		<defName>moonlitRitual_2-2</defName> 
		<label>A Moonlit Ritual</label> 
		<desc>You have decided to leave them be.</desc>
		<!-- Basic event stuff -->
		<timeTillTrigger>60000</timeTillTrigger> 
		
		<eventFollows>true</eventFollows>
		<splitEventFollows>true</splitEventFollows>
		<splitEventChance>50</splitEventChance>
		
		<followingEvent>moonlitRitual_3-3</followingEvent>
		<followingEvent2>moonlitRitual_3-4</followingEvent2>
		
		<rangeSettlementsAffected>1~1</rangeSettlementsAffected> 
		<settlementsCarryOver>true</settlementsCarryOver> 
	</FactionColonies.FCEventDef>	
	
		
		
	<FactionColonies.FCEventDef>
		<!-- Basic def stuff -->
		<defName>moonlitRitual_3-1</defName> 
		<label>A Moonlit Ritual</label> 
		<desc>You have ordered the investigation to continue...</desc>
		<!-- Basic event stuff -->
		<timeTillTrigger>60000</timeTillTrigger> 
		<eventFollows>true</eventFollows>
		<followingEvent>moonlitRitual_4-1</followingEvent>
		
		<rangeSettlementsAffected>1~1</rangeSettlementsAffected> 
		<settlementsCarryOver>true</settlementsCarryOver> 
	</FactionColonies.FCEventDef>
	<FactionColonies.FCEventDef>
		<!-- Basic def stuff -->
		<defName>moonlitRitual_4-1</defName> 
		<label>A Moonlit Ritual</label> 
		<desc>After not reporting back, a search for the investigator was conducted. He was found dead. His body was stripped, his chest cavity split, and his skin carved with runic symbols. The group, whoever they were, were not seen again. Dread falls upon us all. \n Coincidently enough, this week's harvests seem to have spoiled... \n -2 happiness a day, -1 food base production.</desc>
		<!-- Basic event stuff -->
		<timeTillTrigger>300000</timeTillTrigger> 
		<traits><li>moonlitRitual_4-1-1</li></traits>
		
		<rangeSettlementsAffected>1~1</rangeSettlementsAffected> 
		<settlementsCarryOver>true</settlementsCarryOver> 
	</FactionColonies.FCEventDef>
	<FactionColonies.FCTraitEffectDef>
		<defName>moonlitRitual_4-1-1</defName> <!--Name of Def -->
		<label>Dread</label> <!--Lable of Def -->
		<happinessLostBase>2</happinessLostBase>
		<productionBaseFood>-1</productionBaseFood>
	</FactionColonies.FCTraitEffectDef>	

	
	<FactionColonies.FCEventDef>
		<!-- Basic def stuff -->
		<defName>moonlitRitual_3-2</defName> 
		<label>A Moonlit Ritual</label> 
		<desc>You have ordered the investigation to continue...</desc>
		<!-- Basic event stuff -->
		<timeTillTrigger>60000</timeTillTrigger> 
		<eventFollows>true</eventFollows>
		<followingEvent>moonlitRitual_4-2</followingEvent>
		<rangeSettlementsAffected>1~1</rangeSettlementsAffected> 
		<settlementsCarryOver>true</settlementsCarryOver> 
	</FactionColonies.FCEventDef>
	<FactionColonies.FCEventDef>
		<!-- Basic def stuff -->
		<defName>moonlitRitual_4-2</defName> 
		<label>A Moonlit Ritual</label> 
		<desc>The investigator reported back early in the morning looking quite disheaveled. However, his story says otherwise. They expected him this time and gave an invintation to join. As he explains it, they were performing a fertility ritual to their goddess for hopes of a good harvest. Regardless, he seems to enjoyed himself! \n +1 food base production.</desc>
		<!-- Basic event stuff -->
		<timeTillTrigger>300000</timeTillTrigger> 
		<traits><li>moonlitRitual_4-2-1</li></traits>
		
		<rangeSettlementsAffected>1~1</rangeSettlementsAffected> 
		<settlementsCarryOver>true</settlementsCarryOver> 
	</FactionColonies.FCEventDef>
	<FactionColonies.FCTraitEffectDef>
		<defName>moonlitRitual_4-2-1</defName> <!--Name of Def -->
		<label>FertilityRitual</label> <!--Lable of Def -->
		<productionBaseFood>1</productionBaseFood>
	</FactionColonies.FCTraitEffectDef>	
	
	

	<FactionColonies.FCEventDef>
		<!-- Basic def stuff -->
		<defName>moonlitRitual_3-3</defName> 
		<label>A Moonlit Ritual</label> 
		<desc>This week's harvests seem to be unnaturally more plentiful than usual... +.5 food base production.</desc>
		<!-- Basic event stuff -->
		<timeTillTrigger>300000</timeTillTrigger> 
		<traits><li>moonlitRitual_4-3-1</li></traits>
		
		<rangeSettlementsAffected>1~1</rangeSettlementsAffected> 
		<settlementsCarryOver>true</settlementsCarryOver> 
	</FactionColonies.FCEventDef>
	<FactionColonies.FCTraitEffectDef>
		<defName>moonlitRitual_4-3-1</defName> <!--Name of Def -->
		<label>FertilityRitual</label> <!--Lable of Def -->
		<productionBaseFood>.5</productionBaseFood>
	</FactionColonies.FCTraitEffectDef>	
	
	
	
	
	<FactionColonies.FCEventDef>
		<!-- Basic def stuff -->
		<defName>moonlitRitual_3-4</defName> 
		<label>A Moonlit Ritual</label> 
		<desc>This week's harvests seem to be unnaturally less plentiful than usual... -.5 food base production.</desc>
		<!-- Basic event stuff -->
		<timeTillTrigger>300000</timeTillTrigger> 
		<traits><li>moonlitRitual_4-4-1</li></traits>
		
		<rangeSettlementsAffected>1~1</rangeSettlementsAffected> 
		<settlementsCarryOver>true</settlementsCarryOver> 
	</FactionColonies.FCEventDef>
	<FactionColonies.FCTraitEffectDef>
		<defName>moonlitRitual_4-4-1</defName> <!--Name of Def -->
		<label>FertilityRitual</label> <!--Lable of Def -->
		<productionBaseFood>-.5</productionBaseFood>
	</FactionColonies.FCTraitEffectDef>	
	
	
	
	

</Defs>