<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<FactionColonies.FCTraitEffectDef>
		<defName>minimizeTaxation</defName> <!--Name of Def -->
		<label>Minimize Taxation</label> <!--Lable of Def -->
		<desc>Collect less taxes from your settlements. This will make them happier and reduce unrest. 65% basetax, +.5 happiness a day, -1 unrest a day.</desc> <!-- Description of trait -->
		<!-- Economic Stats -->
		<taxBasePercentage>-35</taxBasePercentage> <!-- This is added to the tax percentage -->
		<!-- Social Stats Base - These stats affect the amount of the stat gained /tax cycle-->
		<happinessGainedBase>.5</happinessGainedBase>
		<unrestLostBase>1</unrestLostBase>
	</FactionColonies.FCTraitEffectDef>
	
	
	<FactionColonies.FCTraitEffectDef>
		<defName>heavyTaxation</defName> <!--Name of Def -->
		<label>Heavy Taxation</label><!--Lable of Def -->
		<desc>Increase the amount of taxes on your settlements. 125% basetax, -.5 happiness a day, +1 unrest per day, -50% unrest lost, -50% happiness gained.</desc> <!-- Description of trait -->
		<!-- Economic Stats -->
		<taxBasePercentage>25</taxBasePercentage> <!-- This is added to the tax percentage -->
		<!-- Social Stats Base - These stats affect the amount of the stat gained /tax cycle-->
		<happinessLostBase>.5</happinessLostBase>
		<unrestGainedBase>1</unrestGainedBase>
		<!-- Social Stats Multiplier - These stats affect the multiplier of the stat gained /tax cycle-->
		<happinessGainedMultiplier>.5</happinessGainedMultiplier>
		<unrestLostMultiplier>.5</unrestLostMultiplier>
	</FactionColonies.FCTraitEffectDef>
	
	
	
</Defs>